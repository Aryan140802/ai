# simplified_team_handler.py  
class TeamHandler:
    """Simplified Team Handler - delegates to UnifiedAIAssistant"""
    
    def __init__(self):
        self.assistant = UnifiedAIAssistant()
    
    def initialize(self):
        return self.assistant.initialize()
    
    def process_question(self, question: str) -> str:
        """Process team-specific questions"""
        result = self.assistant.process_question_with_token(f"TEAM_QUERY: {question}")
        return result["response"]
